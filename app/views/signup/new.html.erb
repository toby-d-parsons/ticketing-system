<h1>Signup!</h1>

<%= form_with model: @user, url: signup_path, method: :post do |form| %>
    <div>
        <%= form.label :email_address %>
        <%= form.email_field :email_address, maxlength: 255, size: 60 %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.text_field :password %>
    </div>
    <div>
        <%= form.label :password_confirmation %>
        <%= form.text_field :password_confirmation %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>