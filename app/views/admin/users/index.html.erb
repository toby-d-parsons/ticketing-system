<h1>Users</h1>

<div>
    <%= link_to "New", new_admin_user_path %>
</div>

<table>
    <tr>
        <th>ID</th>
        <th>Email Address</th>
        <th>Role</th>
        <th></th>
        <th></th>
    </tr>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.email_address %></td>
            <td><%= user.role.name %></td>
            <td><%= link_to "Edit", edit_admin_user_path(user) %>
            <td><%= button_to "Delete", admin_user_path(user), method: :delete, data: { turbo_confirm: "Are you sure?" } %></td>
            <% if !user.email_confirmed? %>
                <td><%= button_to "Resend Activation Email", resend_activation_email_admin_user_path(user), method: :post %></td>
            <% end %>
        </tr>
    <% end %>
</table>